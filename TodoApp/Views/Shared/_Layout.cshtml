<!DOCTYPE html>
<html lang="en">
<head style="background:#202020">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TodoApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TodoApp.styles.css" asp-append-version="true" />
    <script src="https://cdn.syncfusion.com/ej2/20.4.38/dist/ej2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/20.4.38/material.css" />
</head>

<body style="background:#202020; color:#E1E1E1;">

    <nav class="navbar sticky-top">
            
            <div class="container-fluid py-2 px-4">
                <i class="fa-solid fa-magnifying-glass"></i>
                
                <div>
                    
                    <form asp-area="Tasks" asp-action="Index">
                        <p>
                            Find task by name: <input type="text" class="search-input" name="SearchString" />
                            <input type="submit" style="background: #D03B2E; color: #FEFFFF; border: 0; border-radius: 3px;" value="Filter" />
                        </p>
                    </form>
                TodoApp
                </div>
            </div>
        </nav>

    <div class="container">
        <partial name="_Sidebar" />      

        <main role="main" class="pb-3">

            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <ejs-scripts></ejs-scripts>
</body>
</div>

</html>
